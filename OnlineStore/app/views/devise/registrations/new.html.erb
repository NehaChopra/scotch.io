
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'well form-horizontal'}) do |f| %>
    <fieldset>
      <%= devise_error_messages! %>

      <!-- Form Name -->
      <legend><center><h2><b>Registration Form</b></h2></center></legend><br>
      <!-- Text input-->

      <div class="form-group field">
        <label class="col-md-4 control-label">First Name</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.text_field :firstname,  class: 'form-control' ,autofocus: true %>
          </div>
        </div>
      </div>

      <!-- Text input-->

      <div class="form-group field">
        <label class="col-md-4 control-label" >Last Name</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.text_field :lastname, class: 'form-control' , autofocus: true %>
          </div>
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group field">
        <label class="col-md-4 control-label">E-Mail</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            <%= f.email_field :email, class: 'form-control' , autofocus: true %>
          </div>
        </div>
      </div>


      <div class="form-group field">
        <label class="col-md-4 control-label" >Password</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.password_field :password, class: 'form-control' , autocomplete: "off" %>
          </div>
        </div>
      </div>

      <!-- Text input-->

      <div class="form-group field">
        <label class="col-md-4 control-label" >Confirm Password</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.password_field :password_confirmation, class: 'form-control' , autocomplete: "off" %>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    </fieldset>

<% end %>