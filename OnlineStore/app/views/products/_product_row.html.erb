<div id="products">
	<div class="item  col-xs-4 col-lg-4">
	  <div class="thumbnail">
	    <div class="caption">
	      <h4 class="group inner list-group-item-heading">
	        <%= product.name %></h4>
	      <p class="group inner list-group-item-text">
	       <%= product.description %>
	      </p>
	      <br>
	      <div class="row">
	        <div class="col-xs-12 col-md-6">
	          <%= form_for @order_lines, remote: true do |f| %>
	              Unit Price: <span style="color: green"><%= number_to_currency product.price %></span>
	              <div class="input-group">
	                <%= f.number_field :qty, value: 1, class: "form-control", min: 1 %>
	                <div class="input-group-btn">
	                  <%= f.hidden_field :product_id, value: product.id %>
	                  <%= f.submit "Add to Cart", class: "btn btn-success" %>
	                </div>
	              </div>
	          <% end %>
	        </div>
	      </div>
	    </div>
	  </div>
	</div>
</div>

